<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtOrderName"
        android:text="Tên hàng: "
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtOrderPrice"
        android:text="Tên hàng: "
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOrderName"/>
    <TextView
        android:id="@+id/txtAmountItem"
        android:text="Tên hàng: "
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtOrderPrice"/>
    <TextView
        android:id="@+id/txtTotalPrice"
        android:text="Thành tiền: "
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@+id/txtAmountItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/txtTotalPrice"
        android:background="#0000FF"/>


</RelativeLayout>